<script type="text/javascript">
var pag = null;
var baseUrl = '/eims/fymx/cwfy.do';

//初始化index
function indexOnLoad(){
	var firstDate = new Date();
	firstDate.setDate(1); //第一天
	var endDate = new Date(firstDate);
	endDate.setMonth(firstDate.getMonth()+1);
	endDate.setDate(0);
	$('_ksrq').value=new XDate(firstDate).toString('yyyy-MM-dd');
	$('_jsrq').value=new XDate(endDate).toString('yyyy-MM-dd');
	query();
}

//查询
function query(){	
	if (pag == null) pag = new PageExe();
	var qv = 'a=a';
	if($F('_type') != ''){
		qv += '&type__like__string=' + new BaseClass().encode($F('_type'),true);
	}
	if($F('_dh') != ''){
		qv += '&dh__like__string=' + new BaseClass().encode($F('_dh'),true);
	}
	if($F('_zy') != ''){
		qv += '&zy__like__string=' + new BaseClass().encode($F('_zy'),true);
	}

	if($F('_ksrq') != ''){
		qv += '&fyrq__gte__string=' + $F('_ksrq');
	}
	if($F('_jsrq') != ''){
		qv += '&fyrq__lte__string=' + $F('_jsrq');
	}
	pag.query(
		baseUrl + '?action=list',
		'_list',
		qv + '&orders=id__desc'
	);
}
// 分页查询方法
function yggzJump(/*string*/_url, /*int*/curPage)
{
	pag.query(
		_url + curPage,
		'_list'
	);
}

// 删除
function remove(id)
{
	var _id = base.getChecked('id', true);
	if (!id && _id.length < 1) {
		base.alert('请先选择要删除的记录！');
		return;
	}
	base.log('要删除的cwfy记录ID为：' + (id || _id.join(',')));
	base.confirm('您确信要删除选中的记录吗？', function() {
		new Ajax.Request(
				baseUrl + '?action=remove',
				{
					method : 'POST',
					evalScripts : true,
					parameters :	'id=' + (id || _id.join('&id=')),
					onComplete : function(xmlHttp,error){
						alert("删除成功");
						query();
					}
				}
			);		
	});
}

//保存,i为外挂字符，为空时为 编辑
function checkForm(i){	
	var et = $('fyrq'+i);
	if (!et || et.value.strip() == '') {
 		base.alert('请选择 费用日期！',function(){et.focus();});
 		return false;
 	}	
	et = $('dh'+i);
	if (!et || et.value.strip() == '') {
 		base.alert('请输入 单号！',function(){et.focus();});
 		return false;
 	}
	et = $('zy'+i);
	if (!et || et.value.strip() == '') {
 		base.alert('请输 摘要！',function(){et.focus();});
 		return false;
 	}	
	et = $('je'+i);	
	if (!checkPrice(et)) {
 		base.alert('金额格式不正确，只允许数据带2位小数！',function(){et.focus();});
 		return false;
 	}	

      
	//i不为空时为插入，为空时为编辑保存
	if(!i==''){
		//插入
		$('addButtun').disabled="disabled";
		$('addButtun').value="添加中。"
		 new Ajax.Request(
			baseUrl + '?action=save',
			{
				method : 'POST',
				evalScripts : true,
				parameters :								
								'&type='+$F('type'+i)+
								'&fyrq='+$F('fyrq'+i)+
								'&dh='+$F('dh'+i)+
								'&zy='+$F('zy'+i)+
								'&je='+$F('je'+i),
				onComplete : function(xmlHttp,error){
					$('addButtun').value="添加完成"
					query();
					$('addButtun').disabled="";
					$('addButtun').value="添加"
				}
			}
		);
	}else{
		//编辑保存
		pag.update(
			baseUrl + '?action=save',
			'editForm',
			function() {
				pag.back('_index','_update');
				query();
			}
		);
	}
	
	
	return false;
}
// 编辑页面显示
function edit(id)
{
	var _id = base.getChecked('id', true);
	if (!id && _id.length != 1) {
		base.alert('请先选择要编辑的记录，编辑只能一次选择一条记录！');
		return;
	}
	base.log('要编辑的记录ID为：' + (id || _id[0]));
	pag.showEdit(
		baseUrl + '?action=edit',
		'_update',
		'_index',
		{
			id : id || _id[0]
		},
		function() {}
	);
}
//价格check
function checkPrice(price){  
	return (/^(([1-9]\d*)|\d)(\.\d{1,2})?$/).test(price.value);
}

